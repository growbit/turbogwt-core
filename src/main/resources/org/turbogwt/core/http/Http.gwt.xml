<module>
    <!-- Inherit the core Web Toolkit stuff. -->
    <inherits name="com.google.gwt.user.User"/>
    <inherits name="com.google.gwt.http.HTTP"/>

    <inherits name="org.turbogwt.core.js.Js"/>
    <inherits name="org.turbogwt.core.js.collections.Collections"/>

    <source path="" excludes="**/*Test.java,**/*TestSuite.java,**/*TestUtil.java,**/*Mock.java,**/*Stub.java"/>

    <replace-with class="org.turbogwt.core.http.UriBuilderImpl">
        <when-type-is class="org.turbogwt.core.http.UriBuilder"/>
    </replace-with>

    <replace-with class="org.turbogwt.core.http.ServerConnectionImpl">
        <when-type-is class="org.turbogwt.core.http.ServerConnection"/>
    </replace-with>

    <replace-with class="org.turbogwt.core.http.ServerImpl">
        <when-type-is class="org.turbogwt.core.http.Server"/>
    </replace-with>
</module>
